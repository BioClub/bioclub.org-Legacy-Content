					]
				  },{
					"featureType": "administrative",
					"elementType": "labels",
					"stylers": [
					{ "visibility": "off" }
					]
				  },{
					"elementType": "labels.text.stroke",
					"stylers": [
					{ "visibility": "off" }
					]
