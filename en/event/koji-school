						"stylers": [
							{ "saturation": -100 },
							{"lightness": 10}
						]
					}
				]
				var mapDiv = document.getElementById("gmap");
				var mapCanvas = new google.maps.Map(mapDiv, {
					center:new google.maps.LatLng(35.65606300, 139.69549100),
					zoom:15,
					mapTypeId:google.maps.MapTypeId.ROADMAP,
					styles: lelStyle,
					scrollwheel: false
				});
				createMarker ({
					position : new google.maps.LatLng(35.65606300, 139.69549100),
					map : mapCanvas
				});
				function createMarker (opts) {
					var marker = new google.maps.Marker(opts);
					return marker;
				}
			}
			initializeGmap();
		</script>
	</body>
</html>
